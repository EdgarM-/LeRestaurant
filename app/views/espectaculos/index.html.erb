<p id="notice"><%= notice %></p>

<h1>Listado de Espectáculos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha</th>
      <th>Descripción</th>
      <th>Inicio</th>
      <th>Fin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @espectaculos.each do |espectaculo| %>
      <tr>
        <td><%= espectaculo.nombre %></td>
        <td><%= espectaculo.fecha %></td>
        <td><%= espectaculo.descripcion %></td>
        <td><%= espectaculo.inicio %></td>
        <td><%= espectaculo.fin %></td>
        <td><%= link_to 'Detalles', espectaculo %></td>
        <td><%= link_to 'Editar', edit_espectaculo_path(espectaculo) %></td>
        <td><%= link_to 'Eliminar', espectaculo, method: :delete, data: { confirm: '¿Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Espectáculo', new_espectaculo_path, :class => 'btn btn-sq' %>
